{
  "compilerOptions": {
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_module/@types",
      "src/@types"
    ]
  },
  "include": [
    "./*.js",
    "./**/*.ts",
  ],
  "exclude": [
    "src/swagger",
    "./__tests__",
  ],
}